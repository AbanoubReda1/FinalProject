@model IEnumerable<StudentService.Models.Course>

@{
    ViewBag.Title = "Index";
}

<center> <h2>Courses</h2></center>
<style>
    h2 {
        
        background: #fff;
        font-family: 'Dancing Script', 'Helvetica', sans-serif;
        font-weight: 800;
        font-size: 30px;
        color: #b30086;
    }
    .table th {
        padding: 6px;
    }
</style>


<table class="table   ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CrediteHour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Syllabus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </th>
        <th>
            <th>
                 <th >
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-light" })
                </th>
            
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CrediteHour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Syllabus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department.DepartmentName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CourseCode }, new { @class = "btn btn-light" }) 
            </td>
             <td>

            @Html.ActionLink("Details", "Details", new { id = item.CourseCode }, new { @class = "btn btn-light" }) 
            </td>
    <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.CourseCode }, new { @class = "btn btn-light" })
        </td>
    </tr>
}

</table>
