@model IEnumerable<StudentService.Models.Task>

@{
    ViewBag.Title = "Index";
}

<center> <h2>Question</h2></center>
<style>
    h2 {
        background: #fff;
        font-family: 'Dancing Script', 'Helvetica', sans-serif;
        font-weight: 800;
        font-size: 30px;
        color: #b30086;
    }

    .table th {
        padding: 6px;
    }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TaskHeader)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskDetails)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Section.DepartmentCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type1.TypeName)
        </th>
        <th>
            <th>
        <th>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-light" })
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.TaskHeader)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TaskDetails)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Section.DepartmentCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Type1.TypeName)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.TaskNumber }, new { @class = "btn btn-light" })
    </td>
    <td>

        @Html.ActionLink("Details", "Details", new { id = item.TaskNumber }, new { @class = "btn btn-light" })
    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", new { id = item.TaskNumber }, new { @class = "btn btn-light" })
    </td>
</tr>
    }

</table>
